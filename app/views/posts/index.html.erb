<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<%= link_to "New post", new_post_path %>

<%= paginate @posts, views_prefix: :posts %>

<div id="posts">
  <table>
    <thead>
      <tr>
        <th>title</th>
        <th>body</th>
        <th>created_at</th>
        <th>actions</th>
      </tr>
    </thead>
    <tbody>
  <% @posts.each do |post| %>
    <%= render "posts/post_row", post: post %>
  <% end %>
    </tbody>
  </table>
</div>

